<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_padding">

            <Button
                android:id="@+id/back"
                android:text="Retour"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/picture"
                android:src="@drawable/ic_round_avatar"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_below="@+id/back"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="32dp" />

            <TextView
                android:id="@+id/name"
                style="?textAppearanceHeadline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/picture"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Baptiste C." />

            <TextView
                android:id="@+id/subtitle"
                style="?textAppearanceBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Mobile dev"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/github"
                android:text="GitHub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/youtube"
                android:text="YouTube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/github"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="32dp" />

            <TextView
                android:id="@+id/location_title"
                style="?textAppearanceBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_below="@+id/youtube"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Localisation" />

            <TextView
                android:id="@+id/location_content"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_below="@+id/location_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Lille, France"
                android:layout_marginBottom="32dp" />

            <TextView
                android:id="@+id/company_title"
                style="?textAppearanceBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_below="@+id/location_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Compagnie" />

            <TextView
                android:id="@+id/company_content"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_below="@+id/company_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Worldline"
                android:layout_marginBottom="32dp" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>